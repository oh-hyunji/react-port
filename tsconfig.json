{
  "compilerOptions": {
    "jsx": "react", // JSX 사용 시 react 자동 임포트 처리
    "strict": true, // 엄격한 타입 체크 활성화
    "esModuleInterop": true, // CommonJS 모듈과 호환성 설정
    "allowSyntheticDefaultImports": true, // ES6 import 방식과 CommonJS default import 호환
    "skipLibCheck": true // 라이브러리 타입 검사 건너뛰기 (성능 최적화)
  },
  "include": ["src/**/*"] // src 디렉토리 내의 모든 파일을 컴파일 대상에 포함
}
