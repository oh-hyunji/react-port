{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // "outDir": "lib",
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "jsx": "react",
    "strict": true
    // "target": "es2017"
  },
  "compileOnSave": true,
  // "include": ["src/**/*"]
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
